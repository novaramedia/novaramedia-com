// FONTS

// ******************************************************

// ICONS FONTS

// ** https://genericons.com WP icon font set
// @import "fonts/icons/genericons"

// ** minimal version of Google Materialize UI icons. check the styl for usage
@import "fonts/icons/materialize-min"

// ** full set of Google Materialize. https://design.google.com/icons/
// @import "fonts/icons/materialize"

// ******************************************************

meyer-reset()
box-sizing-reset()
normalize()

h1
  margin: 0 // to counter normalize.css. maybe we can remove normalize.css?

// ******************************************************

// GRID

$cols = 24
$col = 42px

$gutter = 16px

body
  overscroll-behavior: none

flex-grid-maker('xxl')
grid-maker('xxl')

.container
  margin: 0 auto
  width: 1400px

.row
  clearfix()

.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  min-height: 1px

for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )


// BACKGROUNDS 

.background-support-texture, .background-support-texture-alt
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  background-blend-mode: overlay, normal

.avif, .webp
  .background-support-texture
    background-image: linear-gradient(0deg, rgba(255, 25, 65, 0) 20.45%, var(--color-red) 100%), url(img/specials/support-2023-texture.webp)

  .background-support-texture-alt
    background-image: linear-gradient(0deg, var(--color-red) -3.61%, rgba(255, 25, 65, 0) 99.91%), url(img/specials/support-2023-texture-alt.webp)

.fallback
  .background-support-texture
    background-image: linear-gradient(0deg, rgba(255, 25, 65, 0) 20.45%, var(--color-red) 100%), url(img/specials/support-2023-texture.png)

  .background-support-texture-alt
    background-image: linear-gradient(0deg, var(--color-red) -3.61%, rgba(255, 25, 65, 0) 99.91%), url(img/specials/support-2023-texture-alt.png)

// ******************************************************
// START DEPRECATED

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / (2 * $golden-ratio))
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$color-black-soft = rgb(14, 14, 14)
$color-white-soft = rgb(253, 253, 253)
$color-white-soft-transparent = rgba(253, 253, 253, .5)

$color-red = rgb(220, 0, 5) // Mine
$color-red-dark = #A80003
$color-blue = rgb(84, 144, 235)

// END DEPRECATED

// ******************************************************

// COMPONENTS

// QUOTE

.component-quote
  margin-top: 1rem

.component-quote__image-holder
  position: absolute
  bottom: 0
  right: 2rem
  z-index: -10
  width: 50%
  max-height: 100%
  overflow: hidden

@media screen and (max-width: $breakpoint-s)
  .component-quote
    margin-bottom: 2rem

// ******************************************************

// BASIC

