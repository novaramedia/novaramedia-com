@import '~kouto-swiss/index.styl'
@import "helpers"
@import "library"
@import "grid-functions"

// ******************************************************

// FONTS

// ******************************************************

// ICONS FONTS

// ** https://genericons.com WP icon font set
// @import "fonts/icons/genericons"

// ** minimal version of Google Materialize UI icons. check the styl for usage
@import "fonts/icons/materialize-min"

// ** full set of Google Materialize. https://design.google.com/icons/
// @import "fonts/icons/materialize"

// ******************************************************

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// GRID

$cols = 24
$col = 39px
$gutter = 16px

flex-grid-maker(false, $gutter, 'xxl')

.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)

.row
  clearfix()

.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  min-height: 1px

for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

    // FLUID COLS

.percent-col
  float: left
  box-sizing: border-box

$pcols = 10

for pcol in 1..$pcols
  .s-into-{pcol}
    width: ( 100% / pcol )

@media screen and (min-width: 601px)

  for pcol in 1..$pcols
    .m-into-{pcol}
      width: ( 100% / pcol )

@media screen and (min-width: 993px)

  for pcol in 1..$pcols
    .l-into-{pcol}
      width: ( 100% / pcol )

// ******************************************************

// VARIABLES

$golden-ratio = 1.61803398875

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / (2 * $golden-ratio))
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 14px
$font-size-larger = 1.3rem
$font-size-smaller = .8rem
$font-size-h3 = golden-ratio(1rem , .7)
$font-size-h2 = golden-ratio(1rem , 1.1)
$font-size-h1 = golden-ratio(1rem , 2.1)

$font-leading-basic = 1.4
$font-leading-tighter = 1.15
$font-leading-larger = 1.55

$font-tracking-basic = 0.001em
$font-tracking-medium = 0.0075rem
$font-tracking-wider = 0.025em

$color-black-soft = rgb(14, 14, 14)
$color-white-soft = rgb(253, 253, 253)
$color-white-soft-transparent = rgba(253, 253, 253, .5)

$color-gray = rgb(150,150,150)
$color-gray-transparent = rgba(150,150,150, .5)
$color-gray-light = rgb(190,190,190)
$color-gray-light-transparent = rgba(190,190,190, .5)

$color-red = rgb(220, 0, 5) // Mine 
// $color-red = rgb(228, 0, 43) // PANTONE  185 C.
// $color-red = rgb(213, 0, 50) // PANTONE  199 C.
// $color-red = rgb(210, 39, 48) // PANTONE  1795 C.
$color-blue = rgb(84, 144, 235)

$color-lilac = #B1B1FF

$color-blue-light = #CAE5FF
$color-purple-light = #B1B1FF

$border-width = 2px

$basic-animation-speed = .5s

$font-serif = font-stack('Georgia');
$font-sans = font-stack('Helvetica');

// ******************************************************

// TYPOGRAPHY

html
  font-family: $font-sans
  font-size: $font-size-basic
  letter-spacing: $font-tracking-basic

body
  line-height: $font-leading-basic

  // HTML ELEMENT STYLING

.font-size-massive
  font-size: golden-ratio(1rem , 3)
  font-weight: bold
  letter-spacing: $font-tracking-basic
  line-height: 1.1
  
h1, .font-size-h1
  font-size: $font-size-h1
  font-weight: bold
  margin: 0
  letter-spacing: $font-tracking-wider
  line-height: 1.3

h2, .font-size-h2
  font-size: $font-size-h2
  font-weight: bold
  margin: 0
  letter-spacing: $font-tracking-basic

h3, .font-size-h3
  font-size: $font-size-h3
  font-weight: bold

h4
  text-transform: uppercase
  font-weight: bold

h5
  font-weight: bold

p
  margin-bottom: 1rem

  // FONT RULES

.font-italic, em, i
  font-style: italic

.font-bold, strong, b
  font-weight: bold

.font-small-caps
  font-size: 0.85em
  text-transform: uppercase

.font-capitalize
  text-transform: capitalize

.font-uppercase
  text-transform: uppercase

.font-underline
  text-decoration: underline

.font-leading-wider
  line-height: $font-leading-larger

.font-tracking-medium
  letter-spacing: $font-tracking-medium

.font-tracking-wider
  letter-spacing: $font-tracking-wider

.font-smaller
  font-size: $font-size-smaller

.font-mono
  font-family: monospace

.font-serif
  font-family: $font-serif

.font-larger
  font-size: $font-size-larger

  // COLOR RULES

.font-color-white
  color: $color-white-soft

.font-color-black
  color: $color-black-soft

  // SHADOWS

.text-shadow-white
  text-shadow: 0 0 20px $color-white-soft-transparent

.text-shadow-light-gray
  text-shadow: 0 0 20px $color-gray-light-transparent

.text-shadow-gray
  text-shadow: 0 0 20px $color-gray-transparent

  // TEXT RULES

.text-overflow-ellipsis
  overflow: ellipsis

.text-align-left
  text-align: left

.text-align-right
  text-align: right

.text-align-center
  text-align: center

article
  ul, ol
    margin-top: 2.5rem
    margin-bottom: 2.5rem
    margin-left: 1rem
  ul
    li
      list-style: disc inside
  ol
    li
      list-style: decimal inside

.text-copy
  .twitter-tweet, .instagram-media, .oembed-element
    margin: 2.5rem auto !important
  p
    font-family: $font-serif
    font-size: $font-size-larger
    line-height: $font-leading-larger
  blockquote
    font-family: $font-sans
    margin: 2.5rem
    p
      font-family: $font-sans
  h1,h2,h3,h4,h5,h6
    margin-top: 1.5rem
    margin-bottom: 1.5rem
  a
    color: $color-blue
  img
    display: block
    margin: 2.5rem auto
  ul, ol
    font-size: $font-size-larger
    line-height: $font-leading-larger
  .wp-caption
    width: auto !important
    &.alignnone
      text-align: center
    img
      margin: 0
    .wp-caption-text
      text-align: left
      font-family: $font-sans
      font-size: $font-size-smaller
      margin-top: $margin-tiny

.text-copy-max-width
  max-width: ( 18 * $col ) + ( 17  * $gutter )
  margin: 0 auto

.page-copy // what is this doing? surely the .text-copy class should be used
  blockquote
    font-family: $font-sans
    margin: 2.5rem
    p
      font-family: $font-sans
  h1,h2,h3,h4,h5,h6
    margin-top: 1.5rem
    margin-bottom: 1.5rem
  a
    color: $color-blue
  img
    display: block
    margin: 2.5rem auto
  .wp-caption
    width: auto !important
    &.alignnone
      text-align: center
    img
      margin: 0
    .wp-caption-text
      text-align: left
      font-family: $font-sans
      font-size: $font-size-smaller
      margin-top: $margin-tiny

  // LINKS

a
  color: inherit
  text-decoration: none

// ******************************************************

// BACKGROUNDS

.background-black
  background-color: $color-black-soft

.background-white
  background-color: $color-white-soft

.background-gray
  background-color: $color-gray

.background-light-gray
  background-color: $color-gray-light

.background-red
  background-color: $color-red

.background-light-blue
  background-color: $color-blue-light

.background-lilac
  background-color: $color-lilac
  
.background-light-purple
  background-color: $color-purple-light
  
// ******************************************************

// UI ELEMENTS

.icon-large:before
  font-size: $font-size-h3

.button
  display: inline-block
  width: 100%
  padding: $margin-small
  text-align: center
  border: 2px solid $color-black-soft
  &.button-small
    padding: $margin-tiny

// ******************************************************

// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto

.inline-action-list
  margin: 0
  li
    display: inline-block
    margin-right: $margin-small

.only-mobile
  display: none

// ******************************************************

// MARGINS AND PADDING

  // MARGIN

.margin-micro
  margin: $margin-micro

.margin-tiny
  margin: $margin-tiny

.margin-small
  margin: $margin-small

.margin-basic
  margin: $margin-basic

.margin-mid
  margin: $margin-mid

.margin-large
  margin: $margin-large

  // MARGIN TOP

.margin-top-micro
  margin-top: $margin-micro

.margin-top-tiny
  margin-top: $margin-tiny

.margin-top-small
  margin-top: $margin-small

.margin-top-basic
  margin-top: $margin-basic

.margin-top-mid
  margin-top: $margin-mid

.margin-top-large
  margin-top: $margin-large

  // MARGIN BOTTOM

.margin-bottom-micro
  margin-bottom: $margin-micro

.margin-bottom-tiny
  margin-bottom: $margin-tiny

.margin-bottom-small
  margin-bottom: $margin-small

.margin-bottom-basic
  margin-bottom: $margin-basic

.margin-bottom-mid
  margin-bottom: $margin-mid

.margin-bottom-large
  margin-bottom: $margin-large

  // PADDING

.padding-micro
  padding: $margin-micro

.padding-tiny
  padding: $margin-tiny

.padding-small
  padding: $margin-small

.padding-basic
  padding: $margin-basic

.padding-mid
  padding: $margin-mid

.padding-large
  padding: $margin-large

  // PADDING TOP

.padding-top-micro
  padding-top: $margin-micro

.padding-top-tiny
  padding-top: $margin-tiny

.padding-top-small
  padding-top: $margin-small

.padding-top-basic
  padding-top: $margin-basic

.padding-top-mid
  padding-top: $margin-mid

.padding-top-large
  padding-top: $margin-large

  // PADDING BOTTOM

.padding-bottom-micro
  padding-bottom: $margin-micro

.padding-bottom-tiny
  padding-bottom: $margin-tiny

.padding-bottom-small
  padding-bottom: $margin-small

.padding-bottom-basic
  padding-bottom: $margin-basic

.padding-bottom-mid
  padding-bottom: $margin-mid

.padding-bottom-large
  padding-bottom: $margin-large

// ******************************************************

// HEADER

#header
  position: fixed
  width: 100%
  z-index: 1000

#main-content
  padding-top: 57px + $margin-small
  min-height: 75vh

#header-main-wrapper
  background-color: black
  background-image: url('./img/marble-dark-banner.jpg')
  background-size: cover
  background-position: center center

#header-navs
  vertical-align: middle

.header-menu
  li
    padding-right: $margin-tiny

#menu-logo
  svg
    height: 19px
    width: 23px
    
.header-main__middle
  position: relative

#header-main__logotype
  transition: opacity $basic-animation-speed
  svg
    height: 16px
    width: 100%
    vertical-align: text-bottom

#header-main__page-title
  opacity: 0
  transition: opacity $basic-animation-speed
  position: absolute
  left: 0
  top: 0
  width: 100%

#header-sub
  display: none
  a
    font-size: 1.5rem
    line-height: 1.6
    padding-right: .66rem

// SEARCH

#header-search
  display: none

#search-form
  border: $border-width solid $color-white-soft

#search-input, #search-submit
  font-size: $font-size-h3
  border: 0
  &:focus
    outline: 0

#search-input
  float: left
  width: 70%
  background-color: transparent
  color: $color-white-soft

#search-submit
  width: 8%
  min-width: 25px
  float right

#tag-suggestions
  display: none

// ******************************************************

// 404

.error404
  #header-search
    display: block

// ******************************************************

// FORM ELEMENTS

nmButton()
  display: block
  padding: $margin-tiny $margin-small
  font-weight: bold
  text-align: center
  border-width: 1px
  border-style: solid
  border-color: transparent
  border-radius: 3px 
  transition-property: background-color, color, border-color 
  transition-duration: 420ms
  &:hover
    border-color: $color-gray
    cursor: pointer
  &--red
    background-color: $color-red
    color: $color-white-soft   
    &:hover
      background-color: $color-white-soft
      color: $color-red   
      border-color: $color-red 
  &--white
    border-color: $color-black-soft
    &:hover
      background-color: $color-black-soft
      color: $color-white-soft
      border-color: $color-black-soft
      
.nm-button
  nmButton()
  
// ******************************************************

// SUPPORT SECTION

.support-form
  display: block

.support-form__button, .support-form__submit, .support-form__custom-input
  nmButton()
  display: inline-block
  font-weight: normal
  color: $color-red
  background-color: $color-white-soft
  border-color: $color-white-soft
  &:hover, &--active
    color: $color-white-soft
    background-color: $color-red
    border-color: $color-white-soft 
    
.support-form__submit
  width: 100%     

// FUNDRAISER PROGRESS BAR

#progress-bar-row
  display: none

#progress-bar-holder
  position: relative
  height: 1.5em

#progress-bar
  position: absolute
  left: 0
  width: 0%
  transition: width 1s
  height: 1.5em
  background-color: $color-red
  
// ******************************************************

// EMAIL SIGNUP SECTION

.email-signup
  label
    a
      text-decoration: underline
      &:hover
        text-decoration: none

.email-signup__completion-section          
  display: flex
  justify-content: space-between
  align-items: center
  
.email-signup__email-input
  width: 100%
  padding: 1.1rem 1.5rem 
  font-size: $font-size-h3
  
.email-signup__email-gdpr-group
  display: flex
  align-items: center
    
.email-signup__email-gdpr-input
  width: 2rem
  height: 2rem
  margin: 0 1rem
  
.email-signup__submit
  padding: 1.1rem 1.5rem 
  font-size: $font-size-h3
  
.email-signup__feedback-processing
  padding: 1.1rem 1.5rem 
  font-size: $font-size-h3
  
.email-signup__form
  .email-signup__feedback-processing, .email-signup__feedback-failed, .email-signup__feedback-completed
    display: none
  &--processing
    .email-signup__feedback-processing
      display: block
    .email-signup__inputs
      display: none
  &--failed
    .email-signup__feedback-failed
      display: block      
  &--completed
    .email-signup__feedback-completed
      display: block
    .email-signup__inputs
      display: none
      
// ******************************************************

// RADIO PLAYER

#radio-player
  display: none

.jp-controls-holder
  margin-right: $margin-tiny

.jp-block
  display: block
  height: $margin-basic
  width: 100%
  text-align: center
  border: 2px solid $color-white-soft

.jp-button
  text-align: center

.jp-stop
  display: none

.jp-volume-bar
  position: relative

.jp-button, .jp-volume-bar
  &:hover
    cursor: pointer

.jp-volume-bar-value
  background-color: white
  position:relative
  height: 100%
  
// ******************************************************

// SPINNER

.spinner {
  width: 1em;
  height: 1em;
  margin: 0 auto;
  position: relative;
}

.double-bounce1, .double-bounce2 {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #333;
  opacity: 0.6;
  position: absolute;
  top: 0;
  left: 0;
  
  -webkit-animation: sk-bounce 2.0s infinite ease-in-out;
  animation: sk-bounce 2.0s infinite ease-in-out;
}

.double-bounce2 {
  -webkit-animation-delay: -1.0s;
  animation-delay: -1.0s;
}

@-webkit-keyframes sk-bounce {
  0%, 100% { -webkit-transform: scale(0.0) }
  50% { -webkit-transform: scale(1.0) }
}

@keyframes sk-bounce {
  0%, 100% { 
    transform: scale(0.0);
    -webkit-transform: scale(0.0);
  } 50% { 
    transform: scale(1.0);
    -webkit-transform: scale(1.0);
  }
}

// ******************************************************

// FRONT PAGE

// SIGNUPS

.front-page-signup
  display: flex
  align-items: center

.front-page-signup__image
  width: 25%
  padding-right: 1.25rem
  max-width: 80px
  img
    display: block

.front-page-signup__text
  width: 73%
  p
    margin-bottom: 0

// ABOVE THE FOLD

.front-page-above-the-fold__column
  .col
    margin-left: 0
    margin-right: 0

// ******************************************************

// INDEXES

.post-col12-image
  position: relative

.post-col12-image-overlay
  position: absolute
  bottom: 0
  left: 0
  top: 0
  right: 0
  background-image: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0) 30%,rgba(0,0,0,0.5) 100%)

.post-col12-text
  position: absolute
  bottom: 0
  left: 0
