// ******************************************************

// SUPPORT PAGE

.support-page__hero-wrapper
  padding: 70px 0

#other-donation-methods
  svg
    height: 2rem
    width: auto

// ******************************************************

// SPINNER

.spinner
  width: 1em
  height: 1em
  margin: 0 auto
  position: relative

.double-bounce1, .double-bounce2
  width: 100%
  height: 100%
  border-radius: 50%
  background-color: $color-black-soft
  opacity: 0.6
  position: absolute
  top: 0
  left: 0
  animation: sk-bounce 2.0s infinite ease-in-out

.spinner--white
  .double-bounce1, .double-bounce2
    background-color: $color-white-soft

.double-bounce2
  animation-delay: -1.0s

@keyframes sk-bounce
  0%, 100%
    transform: scale(0.0)
  50%
    transform: scale(1.0)

// ******************************************************

// INDEXES

.post-col12-image
  position: relative

.post-col12-image-overlay
  position: absolute
  bottom: 0
  left: 0
  top: 0
  right: 0
  background-image: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0) 30%,rgba(0,0,0,0.5) 100%)

// ******************************************************

// ARCHIVES

.category-archive__logo
  width: 220px

.category-archive__submenu
  display: inline-block
  li
    display: inline-block
    &:before
      content: '| '

// ******************************************************

// SECTIONS

.section-archive__submenu
  display: inline-block
  li
    display: inline-block
    margin-right: .5rem
    &:after
      content: ' | '
    &:last-child:after
      content: none

// ******************************************************

// PAGE: ABOUT

.about-page__person
  a:after
    content: '\219D'
    position: relative
    top: -.2em
    left: .2em

// ******************************************************

// SINGLE

#single-resources-section
  display: none

  // ARTICLE

#single-article-support-box
  border: 1px solid $color-red
  padding: 1rem

  // LIVEBLOG

.text-copy
  .liveblog-update-heading
    border-top: 1px solid $color-black-soft
    padding-top: $margin-basic
    margin-top: $margin-mid
    margin-bottom: $margin-small
    &:first-of-type
      margin-top: $margin-basic

// ******************************************************

// BOTTOM BAR

#bottom-bar
  position: fixed
  bottom: 0
  left 0
  width: 100%
  z-index: 100

// BAR SUPPORT

.support-bar
  opacity: 0
  transition: opacity var(--transition-speed-medium)
  .support-bar__open-view
    align-items: center
  .grid-row.is-one-even-line-grid
    flex-wrap: nowrap
    justify-content: space-between
    align-items: center
    .grid-item
      min-width: auto
  &--active
    opacity: 1
  &--open
    .support-bar__open-view
      display: flex
    .support-bar__closed-view
      display: none
  &--closed
    .support-bar__open-view
      display: none
    .support-bar__closed-view
      display: flex

.support-bar__open-actions-column
  align-self: stretch

.support-bar__open-actions-wrapper
  display: flex
  flex-direction: column
  height: 100%
  align-items: flex-end
  justify-content: space-between

// Privacy & cookie notice

#obligation-bar
  display: none
  background-color: $color-black-soft

  .flex-grid-row
    flex-wrap: nowrap
    justify-content: space-between
    align-items: center
    .flex-grid-item
      min-width: auto

  p
    margin-bottom: 0

