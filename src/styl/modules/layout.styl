// CSS Grid

.layout-grid
  display: grid
  grid-template-columns: repeat(24, minmax(0, 1fr))
  column-gap: 2rem
  row-gap: 0
  grid-auto-rows: auto

// Utilties

.layout-split-level
  display: flex
  align-items: center
  justify-content: space-between

.layout-split-vertical
  display: flex
  flex-direction: column
  justify-content: space-between
  flex: 1
  height: 100%

.layout-thumbnail-frame
  position: relative
  .layout-thumbnail-frame__inner
    position: absolute
    top: 0
    left: 0
  img
    display: block
