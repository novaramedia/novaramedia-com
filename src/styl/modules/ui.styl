.ui-tag-block
  display: flex
  &--inline
    display: inline-flex

.ui-tag
  font-size-1()
  text-transform: uppercase
  background-color: $color-white-soft
  color: $color-black-soft
  border: 1px solid $color-gray-light
  border-radius: 0.1875rem
  padding: 0.21875rem (0.21875rem * 1.75)
  &:before
    content: ''
    background-color: $color-black-soft
    border-radius: 1rem
    width .4rem
    height: .4rem
    display: inline-block
    margin-right: .25rem
  &--no-border
    border-color: $color-white-soft
  &--no-fill--white
    background-color: transparent
    color: $color-white-soft
    border-color: $color-white-soft
    &:before
      background-color: $color-white-soft

.ui-av-tag
  font-size-1()
  background-color: $color-white-soft
  border-radius: 50%
  display: inline-block
  vertical-align: middle
  width: 1.2rem
  height: 1.2rem
  text-align: center
  padding: 0.21875rem
  &&--video
    svg
      height: .8em
      width: .8em
      margin-left: .25em
      margin-top: .25em
  &&--audio
    svg
      height: 1em
      width: 1em
      margin-left: -.05rem
      margin-top: .15em

.ui-dot
  display: inline-block
  width: 1ex
  height: 1ex
  border-radius: 10ex
  background-color: $color-black-soft
  margin-right: .25em
  &--red
    background-color: $color-red
  &--green
    background-color: $color-green

// Buttons
// -------------

.ui-button
  display: inline-flex
  justify-content: center
  align-items: flex-start
  font-size: 20px
  font-weight: 700
  line-height: 1
  padding: 9px 15px 11px 15px
  background-color: var(--color-white-soft)
  border: 1px solid var(--color-white-soft)
  color: var(--color-black-soft)
  // border-radius: var(--corner-radius)
  border-radius: 4px
  &:hover
    background-color: transparent
    color: var(--color-white-soft)
    cursor: pointer
  &:active
    opacity: .5
  &--red
    background-color: var(--color-red)
    color: var(--color-white-soft)
    border-color: var(--color-red)
    &:hover
      color: var(--color-red)
  &--white
    background-color: var(--color-white-soft)
    color: var(--color-black-soft)
    border-color: var(--color-white-soft)
    &:hover
      color: var(--color-white-soft)
  &--black
    background-color: var(--color-black-soft)
    color: var(--color-white-soft)
    border-color: var(--color-black-soft)
    &:hover
      color: var(--color-black-soft)

// -------------

.ui-border-bottom
  border-bottom: 1px solid $color-gray-light

.ui-border-top
  border-top: 1px solid $color-gray-light

.ui-border--black
  border-color: $color-black-soft

// -------------

.ui-rounded-image
  border-radius: var(--corner-radius)

.ui-rounded-box
  border-radius: var(--corner-radius)

// -------------

.ui-post-hover
  .post__title
    transition: color $duration-quick-transitions ease-in-out
  &:hover
    .post__title
      color: $color-black--hover

// -------------

.ui-ticker
  position: relative
  width: 100%
  height: 1.5em
  overflow: hidden

  .ui-ticker__fade-left
    position: absolute
    top: 0
    left: 0
    width: 1.5rem
    height: 100%
    background-image: linear-gradient(to left, rgba(255, 255, 255, 0), var(--color-black-soft))
    z-index: 10

  .ui-ticker__fade-right
    position: absolute
    top: 0
    right: 0
    width: 1.5rem
    height: 100%
    background-image: linear-gradient(to right, rgba(255, 255, 255, 0), var(--color-black-soft))
    z-index: 10

  .ui-ticker__item
    display: inline-block
    white-space: nowrap

  .ui-ticker__inner
    height: 1.5em
    line-height: 1.5em
    white-space: nowrap
    display: inline-block
    box-sizing: content-box
    animation: ticker 40s linear infinite
    animation-play-state: running
    &:hover
      animation-play-state: paused
    @keyframes ticker
      0%
        transform: translateX(100%)
        visibility: visible

      100%
        transform: translateX(-100%)
