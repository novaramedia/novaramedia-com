.ui-tag-block
  display: inline-flex
  align-items: center
  &:hover
    .ui-tag, .ui-av-tag
      background-color: var(--color-gray-light)
  &:active
    .ui-tag
      color: var(--color-black-soft-transparent)
      &:before
        background-color: var(--color-black-soft-transparent)
    .ui-av-tag
      svg
        path
          opacity: .5
  &--no-border
    .ui-tag, .ui-av-tag
      border-color: var(--color-white-soft)
    &:hover
      .ui-tag, .ui-av-tag
        background-color: transparent
        color: var(--color-white-soft)
        border-color: var(--color-white-soft)
        &:before
          background-color: var(--color-white-soft)
        svg
          path
            fill: var(--color-white-soft)
    &:active
      .ui-tag
        color: var(--color-white-soft-transparent)
        &:before
          background-color: var(--color-white-soft-transparent)
  &--no-fill--white
    .ui-tag, .ui-av-tag
      background-color: transparent
      color: var(--color-white-soft)
      border-color: var(--color-white-soft)
      &:before
        background-color: var(--color-white-soft)
      svg
          path
            fill: var(--color-white-soft)
    &:hover
      .ui-tag, .ui-av-tag
        background-color: var(--color-white-soft)
        color: var(--color-black-soft)
        &:before
          background-color: var(--color-black-soft)
        svg
          path
            fill: var(--color-black-soft)
    &:active
      .ui-tag
        color: var(--color-black-soft-transparent)
        &:before
          background-color: var(--color-black-soft-transparent)

.ui-tag
  font-size-1()
  text-transform: uppercase
  background-color: var(--color-white-soft)
  color: var(--color-black-soft)
  border: 1px solid var(--color-gray-light)
  border-radius: var(--corner-radius)
  padding: 0.25rem 0.40625rem 0.25rem 0.34375rem
  display: inline-flex
  align-items: center
  &:before
    content: ''
    background-color: var(--color-black-soft)
    border-radius: 50%
    width 1cap
    height: 1cap
    display: inline-block
    margin-right: .25rem

.ui-av-tag
  font-size-1()
  background-color: var(--color-white-soft)
  border: 1px solid var(--color-gray-light)
  border-radius: 50%
  display: inline-flex
  align-content: center
  justify-content: center
  width: 1.28571429rem
  height: 1.28571429rem
  text-align: center
  padding: 0.21875rem
  &&--video
    svg
      height: .8em
      width: .8em
      margin-left: .25em
      margin-top: .25em
  &&--audio
    svg
      height: 1em
      width: 1em
      margin-left: -.05rem
      margin-top: .15em

// -------------

.ui-dot
  display: inline-block
  width: 1ex
  height: 1ex
  border-radius: 50%
  background-color: var(--color-black-soft)
  margin-right: .25em
  &--red
    background-color: var(--color-red)
  &--green
    background-color: var(--color-green)

// Form Elements
// -------------

formElementBase()
  display: inline-flex
  justify-content: center
  height: 2.625rem
  align-items: center
  font-family: var(--font-family-sans)
  font-size: 1.25rem
  line-height: 1.25rem
  padding: 0.5625rem 0.9375rem 0.6875rem 0.9375rem
  box-sizing: border-box
  background-color: var(--color-white-soft)
  border: 1px solid var(--color-white-soft)
  color: var(--color-black-soft)
  border-radius calc('var(--corner-radius) * 2')
  &--small
    height: 2.1875rem
    font-size: 1rem
    line-height: 1rem
    padding: 0.4375rem 0.8125rem 0.5625rem 0.8125rem
  &--auto-height
    height: auto
  &--border-gray
    border-color: var(--color-gray-light)
  &:disabled
    background-color: var(--color-gray-light)
    color: var(--color-black-soft)
    border-color: var(--color-gray-light)
    cursor: not-allowed

.ui-button
  formElementBase()
  font-weight: 700
  text-align: center
  &:hover
    background-color: transparent
    color: var(--color-white-soft)
    cursor: pointer
  &:active
    opacity: .5

  &--fill-width
    width: 100%

  &--red
    background-color: var(--color-red)
    color: var(--color-white-soft)
    border-color: var(--color-red)
    &:hover
      color: var(--color-red)

  &--white
    background-color: var(--color-white-soft)
    color: var(--color-black-soft)
    border-color: var(--color-white-soft)
    &:hover
      color: var(--color-white-soft)

  &--black
    background-color: var(--color-black-soft)
    color: var(--color-white-soft)
    border-color: var(--color-black-soft)
    &:hover
      color: var(--color-black-soft)

  &--green
    background-color: var(--color-green)
    color: var(--color-white-soft)
    border-color: var(--color-green)
    &:hover
      color: var(--color-green)

  &--disabled
    background-color: var(--color-gray-light)
    color: var(--color-black-soft)
    border-color: var(--color-gray-light)
    cursor: not-allowed
    &:hover
      background-color: var(--color-gray-light)
      color: var(--color-black-soft)
      cursor: not-allowed

.ui-input
  formElementBase()
  width: 100%

.ui-checkbox
  formElementBase()
  width: 1.25rem
  height: 1.25rem

// -------------

@css {
  .ui-action-link {
    background-image: linear-gradient(transparent 0%, transparent calc(100% - (1em / 10)), currentColor calc(100% - (1em / 10)), currentColor 100%)
  }
}

.ui-action-link
  font-size: 1rem
  font-weight: 700
  background-size: 100% 100%
  background-repeat: no-repeat
  &:hover
    background-image: none
  &:active
    opacity: .5
  &--large
    font-size: 1.25rem
  &--small
    font-size: 0.75rem

// Borders
// -------------

hr
  border: 0
  height: 1px
  margin: 0
  background-color: var(--color-gray-light)

.ui-border-bottom
  border-bottom: 1px solid var(--color-gray-light)

.ui-border-top
  border-top: 1px solid var(--color-gray-light)

.ui-border-left
  border-left: 1px solid var(--color-gray-light)

.ui-border--black
  border-color: var(--color-black-soft)

@media screen and (max-width: $breakpoint-m)
  .ui-border--not-m
    border: none !important

@media screen and (max-width: $breakpoint-s)
  .ui-border--not-s
    border: none !important

// Rounded Elements
// -------------

.ui-rounded-image
  border-radius: var(--corner-radius)

.ui-rounded-box
  border-radius: var(--corner-radius)

// Hover Effects
// -------------

.ui-hover
  transition: opacity var(--transition-speed-ultra)
  &:hover
    opacity: .5

.ui-hover-links-inside
  a
    transition: opacity var(--transition-speed-ultra)
    &:hover
      opacity: .5

// Ticker
// -------------

.ui-ticker
  position: relative
  width: 100%
  height: 1.5em
  overflow: hidden

  .ui-ticker__fade-left
    position: absolute
    top: 0
    left: 0
    width: 1.5rem
    height: 100%
    background-image: linear-gradient(to left, rgba(255, 255, 255, 0), var(--color-black-soft))
    z-index: 10

  .ui-ticker__fade-right
    position: absolute
    top: 0
    right: 0
    width: 1.5rem
    height: 100%
    background-image: linear-gradient(to right, rgba(255, 255, 255, 0), var(--color-black-soft))
    z-index: 10

  .ui-ticker__item
    display: inline-block
    white-space: nowrap

  .ui-ticker__inner
    height: 1.5em
    line-height: 1.5em
    white-space: nowrap
    display: inline-block
    box-sizing: content-box
    animation: ticker 40s linear infinite
    animation-play-state: running
    &:hover
      animation-play-state: paused
    @keyframes ticker
      0%
        transform: translateX(100%)
        visibility: visible

      100%
        transform: translateX(-100%)

// Scroller
// -------------

.ux-scroller
  position: relative
  .ux-scroller__inner
    overflow-y: auto
    overflow-x: hidden
    height: 100%
    scrollbar-width: none /* Firefox */
    -ms-overflow-style: none  /* IE 10+ */
    &::-webkit-scrollbar
      background: transparent /* Chrome/Safari/Webkit */
      width: 0px
  .ux-scroller__fade-top, .ux-scroller__fade-bottom
    position: absolute
    left: 0
    width: 100%
    height: 60px
    z-index: 10
    pointer-events: none
    transition: opacity var(--transition-speed-medium) ease-in-out
  .ux-scroller__fade-top
    top: 0
    background-image: linear-gradient(0deg, rgba(255, 255, 255, 0), var(--color-black-soft))
  .ux-scroller__fade-bottom
    bottom: 0
    background-image: linear-gradient(180deg, rgba(255, 255, 255, 0), var(--color-black-soft))
  &--at-top
    .ux-scroller__fade-top
      opacity: 0
  &--at-bottom
    .ux-scroller__fade-bottom
      opacity: 0

// Misc
// -------------

.ui-chevron
  display: inline-block
  border-right: 2px solid
  border-bottom: 2px solid
  border-color: var(--color-black-soft)
  height: 1rem
  width: 1rem
  &--up
    transform: rotate(225deg)
    margin-bottom: -0.4rem;
  &--down
    transform: rotate(45deg)
  &--left
    transform: rotate(135deg)
  &--right
    transform: rotate(315deg)
  &--white
    border-color: var(--color-white-soft)

.ui-hit-area
  padding: 2rem
  cursor: pointer
  &--small
    padding: 1rem
  &--top-right
    padding-top: 0
    padding-right: 0
  &--bottom-right
    padding-bottom: 0
    padding-right: 0

.ux-pointer
  cursor: pointer
