.ui-tag-block
  display: flex
  align-items: center
  &--inline
    display: inline-flex

.ui-tag
  font-size-1()
  text-transform: uppercase
  background-color: var(--color-white-soft)
  color: $color-black-soft
  border: 1px solid var(--color-gray-light)
  border-radius: var(--corner-radius)
  padding: 0.25rem 0.40625rem 0.25rem 0.34375rem
  display: inline-flex
  align-items: center
  &:before
    content: ''
    background-color: var(--color-black-soft)
    border-radius: 1rem
    width 1cap
    height: 1cap
    display: inline-block
    margin-right: .25rem
  &:hover
    background-color: var(--color-gray-light)
  &--no-border
    border-color: var(--color-white-soft)
    &:hover
      background-color: transparent
      color: var(--color-white-soft)
      border-color: var(--color-white-soft)
      &:before
        background-color: var(--color-white-soft)
  &--no-fill--white
    background-color: transparent
    color: var(--color-white-soft)
    border-color: var(--color-white-soft)
    &:before
      background-color: var(--color-white-soft)
    &:hover
      background-color: var(--color-white-soft)
      color: var(--color-black-soft)
      &:before
        background-color: var(--color-black-soft)

.ui-av-tag
  font-size-1()
  background-color: var(--color-white-soft)
  border-radius: 50%
  display: inline-block
  vertical-align: middle
  width: 1.2rem
  height: 1.2rem
  text-align: center
  padding: 0.21875rem
  &&--video
    svg
      height: .8em
      width: .8em
      margin-left: .25em
      margin-top: .25em
  &&--audio
    svg
      height: 1em
      width: 1em
      margin-left: -.05rem
      margin-top: .15em

// -------------

.ui-dot
  display: inline-block
  width: 1ex
  height: 1ex
  border-radius: 10ex
  background-color: var(--color-black-soft)
  margin-right: .25em
  &--red
    background-color: var(--color-red)
  &--green
    background-color: var(--color-green)

// Form Elements
// -------------

formElementBase()
  display: inline-flex
  justify-content: center
  height: 2.625rem
  align-items: center
  font-family: var(--font-family-sans)
  font-size: 1.25rem
  line-height: 1.25rem
  padding: 0.5625rem 0.9375rem 0.6875rem 0.9375rem
  box-sizing: border-box
  background-color: var(--color-white-soft)
  border: 1px solid var(--color-white-soft)
  color: var(--color-black-soft)
  border-radius calc('var(--corner-radius) * 2')
  &--small
    height: 2.1875rem
    font-size: 1rem
    line-height: 1rem
    padding: 0.4375rem 0.8125rem 0.5625rem 0.8125rem
  &--auto-height
    height: auto
  &--border-gray
    border-color: var(--color-gray-light)

.ui-button
  formElementBase()
  font-weight: 700
  text-align: center
  &:hover
    background-color: transparent
    color: var(--color-white-soft)
    cursor: pointer
  &:active
    opacity: .5

  &--fill-width
    width: 100%

  &--red
    background-color: var(--color-red)
    color: var(--color-white-soft)
    border-color: var(--color-red)
    &:hover
      color: var(--color-red)

  &--white
    background-color: var(--color-white-soft)
    color: var(--color-black-soft)
    border-color: var(--color-white-soft)
    &:hover
      color: var(--color-white-soft)

  &--black
    background-color: var(--color-black-soft)
    color: var(--color-white-soft)
    border-color: var(--color-black-soft)
    &:hover
      color: var(--color-black-soft)

  &--green
    background-color: var(--color-green)
    color: var(--color-white-soft)
    border-color: var(--color-green)
    &:hover
      color: var(--color-green)

.ui-input
  formElementBase()
  width: 100%

.ui-checkbox
  formElementBase()
  width: 1.25rem
  height: 1.25rem

// -------------

@css {
  .ui-action-link {
    background-image: linear-gradient(transparent 0%, transparent calc(100% - (1em / 10)), currentColor calc(100% - (1em / 10)), currentColor 100%)
  }
}

.ui-action-link
  font-size: 1rem
  font-weight: 700
  background-size: 100% 100% // this is unsatisfactory. I dont think the background option will work as it cant set an offset
  background-repeat: no-repeat
  // text-decoration: none
  // text-decoration-thickness: 2px // maybe i need to use this approach
  &:hover
    background-image: none
  &:active
    opacity: .5
  &--large
    font-size: 1.25rem
  &--small
    font-size: 0.75rem

// -------------

.ui-border-bottom
  border-bottom: 1px solid var(--color-gray-light)

.ui-border-top
  border-top: 1px solid var(--color-gray-light)

.ui-border--black
  border-color: var(--color-black-soft)

// -------------

.ui-rounded-image
  border-radius: var(--corner-radius)

.ui-rounded-box
  border-radius: var(--corner-radius)

// -------------

.ui-post-hover
  .post__title
    transition: color $duration-quick-transitions ease-in-out
  &:hover
    .post__title
      color: $color-black--hover

// -------------

.ui-ticker
  position: relative
  width: 100%
  height: 1.5em
  overflow: hidden

  .ui-ticker__fade-left
    position: absolute
    top: 0
    left: 0
    width: 1.5rem
    height: 100%
    background-image: linear-gradient(to left, rgba(255, 255, 255, 0), var(--color-black-soft))
    z-index: 10

  .ui-ticker__fade-right
    position: absolute
    top: 0
    right: 0
    width: 1.5rem
    height: 100%
    background-image: linear-gradient(to right, rgba(255, 255, 255, 0), var(--color-black-soft))
    z-index: 10

  .ui-ticker__item
    display: inline-block
    white-space: nowrap

  .ui-ticker__inner
    height: 1.5em
    line-height: 1.5em
    white-space: nowrap
    display: inline-block
    box-sizing: content-box
    animation: ticker 40s linear infinite
    animation-play-state: running
    &:hover
      animation-play-state: paused
    @keyframes ticker
      0%
        transform: translateX(100%)
        visibility: visible

      100%
        transform: translateX(-100%)

// -------------

.ui-chevron
  display: inline-block
  border-right: 2px solid
  border-bottom: 2px solid
  height: 1rem
  width: 1rem
  &&--up
    transform: rotate(225deg)
    margin-bottom: -0.4rem;
  &&--down
    transform: rotate(45deg)

.ui-hit-area
  padding: 2rem
  cursor: pointer
  &--small
    padding: 1rem
  &--top-right
    padding-top: 0
    padding-right: 0
  &--bottom-right
    padding-bottom: 0
    padding-right: 0

.ux-pointer
  cursor: pointer
