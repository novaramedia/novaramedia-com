.front-page__products-bar
  .swiper-button-prev
    background-image: linear-gradient(270deg, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%)

  .swiper-button-next
    background-image: linear-gradient(90deg, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%)

.products-bar__item
  width: 300px
  a
    display: flex
    height: 100%
    &:hover
      .products-bar__item-inner
        background-color: transparent

.products-bar__item-inner
  border-radius: var(--corner-radius)
  background-color: var(--color-gray-extra-light)
  border: 1px solid var(--color-gray-extra-light)
  padding .5rem
  display: flex
  align-items: center
  flex-wrap: nowrap

.products-bar__item-image
  flex-shrink: 0
  img
    display: block
    max-height: 100%
    width: 3.5rem
    height: 3.5rem

@media screen and (max-width: $breakpoint-m)
  .products-bar__item
    width: 280px

@media screen and (max-width: $breakpoint-s)
  .products-bar__item
    width: 265px
    opacity: .5
