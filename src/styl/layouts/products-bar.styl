.products-bar__wrapper
  overflow: hidden
  position: relative

.products-bar__nav-left, .products-bar__nav-right
  position: absolute
  top: 0
  height: 100%
  width: 3rem
  cursor: pointer
  z-index: 10

.products-bar__nav-left
  background-image: linear-gradient(270deg, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%)
  left: 0
  transition: opacity $duration-quick-transitions ease-in-out

.products-bar__nav-left--disabled
  opacity 0
  z-index: -10

.products-bar__nav-right
  background-image: linear-gradient(90deg, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%)
  right: 0

.products-bar__inner
  display: flex
  flex-wrap: nowrap
  transition: transform $duration-quick-transitions ease-in-out

.products-bar__item
  flex-shrink: 0
  max-width: 100%
  width: 300px
  margin-left: 1rem
  &:first-child
    margin-left: 0
  a
    display: flex
    height: 100%
    &:hover
      .products-bar__item-inner
        background-color: $color-white-soft

.products-bar__item-inner
  border-radius: 2px
  background-color: $color-gray-extra-light
  padding .5rem
  display: flex
  align-items: center
  flex-wrap: nowrap
  transition: background-color $duration-quick-transitions ease-in-out

.products-bar__item-image
  flex-shrink: 0
  img
    display: block
    max-height: 100%
    width: 3.5rem
    height: 3.5rem

@media screen and (max-width: $breakpoint-m)
  .products-bar__item
    width: 280px

@media screen and (max-width: $breakpoint-s)
  .products-bar__item
    width: 260px
