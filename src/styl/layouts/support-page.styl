.support-page__heading
  font-size: 9rem;
  line-height: 0.85;
  white-space: nowrap; /* corrected from wrap: no-wrap */
  max-width: 100%;

.support-page__donation-form-sticky
  position: sticky;
  top: 100px;
  z-index: 1;

.support-page__left-radius
  border-radius: 4px 0 0 4px;

.support-page__right-radius
  border-radius: 0 4px 4px 0;

.support-page__text-box-width
  width: 60%;

.support-page__text-container
  display: flex;
  flex-direction: column;
  align-items: center;

.support-page__container
  margin: 0 auto
  width: 97%

.support-page__our-story-background
  position: relative;
  height: auto;
  background-size: 100% auto;
  background-position:  center 40%;
  background-repeat: no-repeat;
  z-index: 1;

.support-page__our-story-background::before
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 4px;
  background-color: rgba(0, 0, 0, 0.5); /* 50% black */
  z-index: 2;

.support-page__our-story-background > *
  position: relative;
  z-index: 3;

.support-page__quote-mark
  width: 25px;
  height: 20px;

.support-page__direct-debit-logo, .support-page__paypal-logo
  width: auto;
  height: 30px;

@media screen and (max-width: $breakpoint-xl)
  .support-page__heading
    font-size: 7rem;

@media screen and (max-width: $breakpoint-l)
  .support-page__heading
    font-size: 6.5rem;

@media screen and (max-width: $breakpoint-m)
  .support-page__heading
    font-size: 6.3rem;

@media screen and (max-width: $breakpoint-s)
  .support-page__left-radius
    order: 2;

  .support-page__right-radius
    order: 1;

  .support-page__grid-item
    padding-left: 0 !important;
    padding-right: 0 !important;

  .support-page__text-box-width
    width: 96%;

  .support-page__left-radius, .support-page__right-radius
    background-color: transparent;

  .support-page__heading
    font-size: 4.5rem;
    white-space: normal;

  .support-page__our-story-background
    background-size: cover;

  .support-page__container
    width: 95%;
    overflow: hidden;
