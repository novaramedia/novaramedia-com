@media screen and (max-width: $breakpoint-s)
  html
    --header-height: 42px

  #menu-toggle, #search-toggle, #menu-logo
    padding: 0 2px
    .icon-menu:before
      margin: 0

  .site-header__logomark
    svg
      height: 15px
      width: 23px

