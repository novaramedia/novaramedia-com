// *** UNREFACTORED FROM HERE

// SITE NAV

#header-sub
  display: none
  a
    font-size: 1.5rem
    line-height: 1.6
    padding-right: .66rem

// SEARCH

#header-search
  display: none

#search-form
  border: $border-width solid $color-white-soft

#search-input, #search-submit
  font-size: $font-size-h3
  border: 0
  &:focus
    outline: 0

#search-input
  float: left
  width: 70%
  background-color: transparent
  color: $color-white-soft

#search-submit
  width: 8%
  min-width: 25px
  float right

#tag-suggestions
  display: none

