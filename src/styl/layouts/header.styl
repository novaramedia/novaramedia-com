$header-height = 46px

html
  --header-height: 46px

.site-header
  position: fixed
  width: 100%
  z-index: 1000

#main-content
  padding-top: var(--header-height)
  min-height: 55vh

.site-header__wrapper
  height: var(--header-height)
  overflow: hidden

.site-header__main
  padding-top: 12px
  padding-bottom: 10px

.site-header__navigation
  user-select: none

.site-header__logomark
  position: relative
  transition: opacity $basic-animation-speed
  svg
    height: 19px
    width: 23px

.site-header__scroll-reveal
  opacity: 0
  transition: opacity $basic-animation-speed
  position: absolute
  left: 0.5em
  right: 0.5em
  top: 0

.site-header__scroll-reveal-text
  display: inline-block
  max-width: 100%
  vertical-align: middle

