.novara-fm-archive__header
  display: flex
  justify-content: center
  align-items: center
  svg
    width: 60%
    max-width: 600px

.novara-fm-archive__splash-video-container
  position: relative
  background-color: $color-black-soft
  z-index: -10

.novara-fm-archive__splash-video
  width: 100%
  height: 100%
  object-fit: cover
  position: absolute
  top: 0
  left: 0
  z-index: -10

.novara-fm-archive__cross
  max-width: 100%
  height: auto

.novara-fm-archive__cross--black
  path
    fill: $color-black-soft

.novara-fm-archive__cross--green
  path
    fill: $color-green

.novara-fm-archive__archive-block-wrapper
  overflow: hidden
  position: relative

.novara-fm-archive__archive-block-nav-left, .novara-fm-archive__archive-block-nav-right
  position: absolute
  top: 0
  height: 100%
  width: 3rem
  cursor: pointer
  z-index: 10

.novara-fm-archive__archive-block-nav-left
  background-image: linear-gradient(270deg, rgba(255,255,255,0) 0%, var(--color-green) 100%)
  left: 0
  transition: opacity $duration-quick-transitions ease-in-out

.novara-fm-archive__archive-block-nav-left--disabled
  opacity 0
  z-index: -10

.novara-fm-archive__archive-block-nav-right
  background-image: linear-gradient(90deg, rgba(255,255,255,0) 0%, var(--color-green) 100%)
  right: 0

.novara-fm-archive__archive-block-inner
  padding: 1rem
  display: flex
  flex-wrap: nowrap
  transition: transform $duration-quick-transitions ease-in-out

.novara-fm-archive__archive-block-post
  flex-shrink: 0
  max-width: 100%
  width: 200px
  margin-left: 1rem
  &:first-child
    margin-left: 0
  a
    display: flex
    height: 100%
    &:hover
      .novara-fm-archive__archive-block-item-inner
        background-color: $color-white-soft

.novara-fm-archive__split-logotype
  display: block
  width: 80%
  max-width: 700px
  margin: 0 auto
