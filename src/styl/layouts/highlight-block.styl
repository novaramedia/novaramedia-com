.highlight-block__featured-1
  grid-column-start: 1;
  grid-column-end: span 18;
  grid-row-start: 1;
  grid-row-end: span 1;

.highlight-block__latest-posts
  grid-column-start: 19;
  grid-column-end: span 6;
  grid-row-start: 1;
  grid-row-end: span 2;

@media screen and (max-width: $breakpoint-s)
  .highlight-block__featured-1
    grid-column-end: span 24;

  .highlight-block__latest-posts
    grid-column-start: 1;
    grid-column-end: span 24;
    grid-row-start: 2;
    grid-row-end: span 2;
    > :nth-child(n+4)
      display: none
    :nth-child(3)
      border: none

