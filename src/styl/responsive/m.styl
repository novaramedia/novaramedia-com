// GRID

$col = 19px
$gutter = 12px

.col
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)

for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

flex-grid-maker('m')

// ******************************************************

// VARIABLES

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / (2 * $golden-ratio))
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 13px
$font-size-larger = 1.3rem
$font-size-h3 = golden-ratio(1rem , .6)
$font-size-h2 = golden-ratio(1rem , .9)
$font-size-h1 = golden-ratio(1rem , 1.8)

$font-leading-basic = 1.4
$font-leading-tighter = 1.15
$font-leading-larger = 1.55

$font-tracking-basic = 0
$font-tracking-wider = 0.025em

$border-width = 2px

// ******************************************************

// TYPOGRAPHY

html
  font-size: $font-size-basic
  letter-spacing: $font-tracking-basic

body
  line-height: $font-leading-basic

  // HTML ELEMENT STYLING

h1, .font-size-h1
  font-size: $font-size-h1
  letter-spacing: -($font-tracking-basic)

h2, .font-size-h2
  font-size: $font-size-h2

h3
  font-size: $font-size-h3

  // NEW TYPE SCALE 2021

.font-size-m-0
  font-size: 12px

.font-size-m-1
  font-size: 14px
  line-height: 1.4

.font-size-m-2
  font-size: 21px
  line-height: 1.25

.font-size-m-3
  font-size: 32px
  line-height: 1.1875

.font-size-m-4
  font-size: 47px
  line-height: 1.14893617
  letter-spacing: -0.025em

.font-size-m-5
  font-size: 71px
  line-height: 1.05633803
  letter-spacing: -0.025em

.font-size-m-6
  font-size: 106px
  line-height: 0.8490566
  letter-spacing: -0.025em

.font-size-m-7
  font-size: 159px
  line-height: 0.84937238
  letter-spacing: -0.02em

.font-size-m-8
  font-size: 239px
  line-height: 0.84937238
  letter-spacing: -0.04em

  // FONT RULES

.font-small-caps
  font-size: 0.85em

.font-leading-wider
  line-height: $font-leading-larger

.font-tracking-wider
  letter-spacing: $font-tracking-wider

.font-smaller
  font-size: 0.8rem

.font-larger
  font-size: $font-size-larger

.text-copy
  p
    font-size: $font-size-larger
    line-height: $font-leading-larger
  blockquote
    margin: 3rem
  h1,h2,h3,h4,h5,h6
    margin-top: 1.5rem
    margin-bottom: 1.5rem
  a
    color: $color-blue
  img
    display: block
    margin: 2.5rem auto
  .wp-caption
    .wp-caption-text
      margin-top: $margin-tiny

// ******************************************************

// UI ELEMENTS

.icon-large:before
  font-size: $font-size-h3

.button
  padding: $margin-small

// ******************************************************

// BASIC

.inline-action-list
