  min-height: 5rem
  padding: $margin-small

.support-form-slider
  width: 55%
  margin-right: 2%

.support-form-submit
  width: 23%
  margin-left: 2%
  padding: $margin-tiny $margin-small

// SUPPORT PAGE

.support-page__hero-wrapper
  padding: 80px 0

