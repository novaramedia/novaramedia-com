  padding-bottom: $margin-basic

.mobile-padding-bottom-mid
  padding-bottom: $margin-mid

.mobile-padding-bottom-large
  padding-bottom: $margin-large

// ******************************************************

// INDEXES

#posts
  .row
    margin-bottom: 0
  .col
    margin-bottom: $margin-small

.post-col12-image
  position: relative

// ******************************************************

// SUPPORT PAGE

.support-page__hero-wrapper
  padding: $margin-mid 0

.support-page__content-copy
  font-size: 16px

// ******************************************************

// SUPPORT BAR

.support-bar__open-actions-wrapper
  .ui-hit-area
    padding: 0 0 .5rem 2rem

// ******************************************************

// GDPR

#obligation-bar
  .flex-grid-row
    flex-wrap: wrap
    .flex-grid-item:first-child
      margin-bottom: .5rem
