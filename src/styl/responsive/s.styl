// GRID

$gutter = 12px

.col
  width: 100%
  float: none
  margin-left: 0
  margin-right: 0

flex-grid-maker('s')

// ******************************************************

// VARIABLES

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / (2 * $golden-ratio))
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 13px
$font-size-larger = 1.3rem

$font-leading-basic = 1.4
$font-leading-tighter = 1.15
$font-leading-larger = 1.55

$font-tracking-basic = 0

$border-width = 2px

// ******************************************************

// TYPOGRAPHY

html
  font-size: $font-size-basic
  letter-spacing: $font-tracking-basic

body
  line-height: $font-leading-basic

  // FONT RULES

.font-small-caps
  font-size: 0.85em

.font-smaller
  font-size: 0.8rem

.text-copy
  p
    font-size: $font-size-larger
    line-height: $font-leading-larger
  blockquote
    margin: 3rem
  h1,h2,h3,h4,h5,h6
    margin-top: 1.5rem
    margin-bottom: 1.5rem
  a
    color: $color-blue
  img
    display: block
    margin: 2.5rem auto
  .wp-caption
    .wp-caption-text
      margin-top: $margin-tiny

// ******************************************************

// UI ELEMENTS

.icon-large:before
  font-size: $font-size-h3

.button
  padding: $margin-small

// ******************************************************

// BASIC

.inline-action-list
  li
    display: inline-block
    margin-right: $margin-small

.only-mobile
  display: initial

.display-s-block
  display: block

.only-desktop
  display: none

// ******************************************************

// MARGINS AND PADDING

  // MARGIN

.margin-micro
  margin: $margin-micro

.margin-tiny
  margin: $margin-tiny

.margin-small
  margin: $margin-small

.margin-basic
  margin: $margin-basic

.margin-mid
  margin: $margin-mid

.margin-large
  margin: $margin-large

  // MARGIN TOP

.margin-top-micro
  margin-top: $margin-micro

.margin-top-tiny
  margin-top: $margin-tiny

.margin-top-small
  margin-top: $margin-small

.margin-top-basic
  margin-top: $margin-basic

.margin-top-mid
  margin-top: $margin-mid

.margin-top-large
  margin-top: $margin-large

  // MARGIN BOTTOM

.margin-bottom-micro
  margin-bottom: $margin-micro

.margin-bottom-tiny
  margin-bottom: $margin-tiny

.margin-bottom-small
  margin-bottom: $margin-small

.margin-bottom-basic
  margin-bottom: $margin-basic

.margin-bottom-mid
  margin-bottom: $margin-mid

.margin-bottom-large
  margin-bottom: $margin-large

  // PADDING

.padding-micro
  padding: $margin-micro

.padding-tiny
  padding: $margin-tiny

.padding-small
  padding: $margin-small

.padding-basic
  padding: $margin-basic

.padding-mid
  padding: $margin-mid

.padding-large
  padding: $margin-large

  // PADDING TOP

.padding-top-micro
  padding-top: $margin-micro

.padding-top-tiny
  padding-top: $margin-tiny

.padding-top-small
  padding-top: $margin-small

.padding-top-basic
  padding-top: $margin-basic

.padding-top-mid
  padding-top: $margin-mid

.padding-top-large
  padding-top: $margin-large

  // PADDING BOTTOM

.padding-bottom-micro
  padding-bottom: $margin-micro

.padding-bottom-tiny
  padding-bottom: $margin-tiny

.padding-bottom-small
  padding-bottom: $margin-small

.padding-bottom-basic
  padding-bottom: $margin-basic

.padding-bottom-mid
  padding-bottom: $margin-mid

.padding-bottom-large
  padding-bottom: $margin-large

// MOBILE ONLY

.mobile-margin-top-none
  margin-top: 0px

.mobile-margin-top-tiny
  margin-top: $margin-tiny

.mobile-margin-top-small
  margin-top: $margin-small

.mobile-margin-top-basic
  margin-top: $margin-basic

.mobile-margin-top-mid
  margin-top: $margin-mid

.mobile-margin-bottom-none
  margin-bottom: 0px

.mobile-margin-bottom-micro
  margin-bottom: $margin-micro

.mobile-margin-bottom-tiny
  margin-bottom: $margin-tiny

.mobile-margin-bottom-small
  margin-bottom: $margin-small

.mobile-margin-bottom-basic
  margin-bottom: $margin-basic

.mobile-margin-bottom-mid
  margin-bottom: $margin-mid

.mobile-margin-bottom-large
  margin-bottom: $margin-large

  // PADDING TOP

.mobile-padding-top-none
  padding-top: 0

.mobile-padding-top-micro
  padding-top: $margin-micro

.mobile-padding-top-tiny
  padding-top: $margin-tiny

.mobile-padding-top-small
  padding-top: $margin-small

.mobile-padding-top-basic
  padding-top: $margin-basic

.mobile-padding-top-mid
  padding-top: $margin-mid

.mobile-padding-top-large
  padding-top: $margin-large

  // PADDING BOTTOM

.mobile-padding-bottom-micro
  padding-bottom: $margin-micro

.mobile-padding-bottom-tiny
  padding-bottom: $margin-tiny

.mobile-padding-bottom-small
  padding-bottom: $margin-small

.mobile-padding-bottom-basic
  padding-bottom: $margin-basic

.mobile-padding-bottom-mid
  padding-bottom: $margin-mid

.mobile-padding-bottom-large
  padding-bottom: $margin-large

// ******************************************************

// FRONT PAGE

#featured-post-title-holder
  position: relative
  padding: $margin-small + $margin-tiny
  font-size: golden-ratio(1rem , 1.2)

#featured-post-title
  color: black
  text-shadow: none

#home-articles-posts, #home-fm-posts, #home-focus-posts, #home-long-read-posts
  .col
    margin-bottom: $margin-small

.front-page-above-the-fold__articles
  article
    clearfix()
    .wp-post-image
      float: left
      width: 'calc(50% - %s)' % $margin-micro
      padding-right: $margin-micro * 2
    div
      float: left
      width: 'calc(50% - %s)' % $margin-micro


// ******************************************************

// VIDEO BLOCK

.video-block-main-video
  margin-bottom: $margin-small

.video-related-video
  width: 100%
  clearfix()
  .video-related-video__thumbnail
    float: left
    width: 'calc(50% - %s)' % $margin-micro
    padding-right: $margin-micro * 2
  h6
    float: left
    width: 'calc(50% - %s)' % $margin-micro
    font-size: 1rem

// ******************************************************

// INDEXES

#posts
  .row
    margin-bottom: 0
  .col
    margin-bottom: $margin-small

.post-col12-image
  position: relative

.post-col12-text
  position: relative
  padding: 0
  margin-top: $margin-tiny
  color: $color-black-soft
  h3
    font-size: $font-size-basic
  h5
    margin-top: 0
    font-size: $font-size-basic
    font-weight: normal

// ******************************************************

// SINGLE

  // LIVEBLOG

.text-copy
  .liveblog-update-heading
    border-top: 1px solid $color-black-soft
    padding-top: $margin-basic
    margin-top: $margin-mid
    margin-bottom: $margin-small
    &:first-of-type
      margin-top: $margin-basic

#single-related
  .post
    margin-bottom: $margin-basic

// ******************************************************

// SUPPORT PAGE

.support-page__hero-wrapper
  padding: $margin-mid 0

.support-page__content-copy
  font-size: 16px

// ******************************************************

// SUPPORT BAR

.support-bar__open-actions-wrapper
  .ui-hit-area
    padding: 0 0 .5rem 2rem

// ******************************************************

// GDPR

#obligation-bar
  .flex-grid-row
    flex-wrap: wrap
    .flex-grid-item:first-child
      margin-bottom: .5rem
