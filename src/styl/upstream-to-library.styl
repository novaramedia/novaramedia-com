.background-gray-base
  background-color: var(--color-gray-base)

.background-gray-mid
  background-color: var(--color-gray-mid)

// ***** ???

.swiper-pagination-bullet
  display: inline-block
  width: 10px
  height: 2px
  background-color: var(--color-gray-mid)
  margin: 0 4px
  transition: opacity 0.3s ease

.swiper-pagination-bullet-active
  background-color: var(--color-black-soft)
  opacity: 1

.swiper
  position: relative

.swiper-pagination
  position: absolute
  bottom: 1rem
  left: 0
  right: 0
  z-index: 10
  display: flex
  justify-content: center
  pointer-events: auto

// *****

.font-color-gray
  color: var(--color-gray-mid)

.font-color-white-transparent
  color: var(--color-white-soft-transparent)

.font-color-pink
  color: var(--color-pink)

// *****

.ui-boxed-title
  font-weight: bold
  font-size: $large-scale[2] * 1rem // mapped to size scale 9
  background: var(--color-black-soft)
  color: var(--color-white-soft)
  -webkit-font-smoothing: antialiased // this really is for white on black text. might need to remove for other color pairs
  -moz-osx-font-smoothing: grayscale
  padding: 0.625rem 0.875rem 0.5625rem 0.875rem
  line-height: 1em
  border-radius: var(--corner-radius)
  text-transform: uppercase
  display: inline-flex
  justify-content: center
  align-items: center
  &--white
    background: var(--color-white-soft)
    color: var(--color-black-soft)
  &--grey
    background: var(--color-gray-base)
    color: var(--color-black-soft)
  @media (max-width: $breakpoint-s)
    font-size: $small-scale[2] * 1rem // mapped to size scale 9

// *****

.ui-button
  &--red
    &:hover
      color: var(--color-red) // this is correct, but it needs some pair option to have the red hover into white state

.ui-button--slimline
  height: auto
  font-size: 0.875rem
  line-height: 1em
  padding: 0.25rem 0.875rem 0.4375rem 0.875rem


// *****

.ui-dot
  &--pink
    background-color: var(--color-acfm-pink)
  &--gray
    background-color: var(--color-gray-mid)

// *****

.ui-rounded-box--large, .ui-rounded-image--large
  border-radius: var(--corner-radius-large)

.ui-rounded-box--top
  border-top-left-radius: var(--corner-radius)
  border-top-right-radius: var(--corner-radius)

.ui-rounded-box--bottom
  border-bottom-left-radius: var(--corner-radius)
  border-bottom-right-radius: var(--corner-radius)

//layout

// describe existing classes in the library also

.layout-flex-justify-right
  display: flex
  justify-content: flex-end
